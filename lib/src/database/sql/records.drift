import '../tables.dart';

_deleteRecord:
    DELETE FROM records
    WHERE collectionId = :collectionId 
    AND id = :id;
  
_removeSyncedDeletedRecords:
    DELETE FROM records
    WHERE synced = 1
    AND deleted = 1;

_getPendingWritesRecords:
    SELECT * FROM records
    WHERE synced = 0
    AND deleted = 0;

_getPendingDeletesRecords:
    SELECT * FROM records
    WHERE synced = 0
    AND deleted = 1;

_getPendingRecords:
    SELECT * FROM records
    WHERE synced = 0;
